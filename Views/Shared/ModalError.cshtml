@{
    var error = ViewData.Model;
    Layout = "~/Views/Shared/_LayoutSimple.cshtml";
}
<div id="modalError" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
    <div class="modal-dialog alert-info">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">El sistema no ha podido completar la acción</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p><em>Por favor intente realizar los siguientes pasos: </em></p>
                <ul>
                    <li>Presione las teclas <kbd><kbd>Ctrl</kbd> + <kbd>F5</kbd></kbd> para actualizar la página e intente nuevamente. </li>
                    <li>Cierre la pestaña del navegador y vuelva a intentar.</li>
                </ul>
                <div class="alert alert-dark">
                    <h6 class="alert-heading">@error.ErrorMessage</h6>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('#modalError').modal('show');
    });
</script>