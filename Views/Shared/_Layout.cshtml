    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/lib/datatable/dataTables.dataTables.min.css" />
    <link rel="stylesheet" href="/lib/datatable/responsive/responsive.dataTables.min.css" />
    <link rel="stylesheet" href="/lib/fontawesone/css/fontawesome.min.css" />
    <link rel="stylesheet" href="/lib/fontawesone/css/brands.min.css" />
    <link rel="stylesheet" href="/lib/fontawesone/css/solid.min.css" />
    <link rel="stylesheet" href="/css/site.css" />

    <script type="text/javascript" src="/lib/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript" src="/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script type="text/javascript" src="/lib/popper/popper.js"></script>    
    <script type="text/javascript" src="/lib/datatable/dataTables.min.js"></script>
    <script type="text/javascript" src="/lib/datatable/responsive/dataTables.responsive.min.js"></script>
    <script type="text/javascript" src="/lib/datatable/buttons/dataTables.buttons.js"></script>
    <script type="text/javascript" src="/lib/datatable/buttons/buttons.dataTables.js"></script>
    <script type="text/javascript" src="/lib/datatable/buttons/buttons.html5.min.js"></script>
