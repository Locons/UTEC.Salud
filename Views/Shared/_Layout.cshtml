<body>
    <partial name="Cargando" />
    <div class="container-fluid">
        <div class="row flex-nowrap">
            <div class="col-auto col-md-3 col-xl-2 px-sm-2 px-0 bg-dark">
                <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 text-white min-vh-100">
                    <a href="/" class="d-flex align-items-center pb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                        <span class="fs-5 d-none d-sm-inline">UTEC Salud</span>
                    </a>
                    <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start" id="menu">
                        <li class="nav-item">
                            <a href="@Url.Action("Afiliado", "Home")" class="nav-link align-middle px-0">
                                <i class="fa-solid fa-person"></i> <span class="ms-1 d-none d-sm-inline">Afiliado</span>
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("Medico", "Home")" class="nav-link px-0 align-middle">
                                <i class="fa-solid fa-user-doctor"></i> <span class="ms-1 d-none d-sm-inline">Medico</span>
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("Cita", "Home")" class="nav-link px-0 align-middle">
                                <i class="fa-regular fa-calendar-check"></i> <span class="ms-1 d-none d-sm-inline">Cita</span>
                            </a>
                        </li>
                    </ul>
                    <hr>
                </div>
            </div>
            <div class="col py-1">
                @RenderBody()
            </div>
        </div>

        <div id="DivErrores" class="display: none"></div>
    </div>
</body>
</html>
